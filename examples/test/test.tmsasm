mov 60 @fps

def START_OF_ROM #8000

def TEST_SPRITE #80

mrk gameloop

    mov 0 @bg
    mov #ffff @tcol
    mov 0 x
    mov 0 y
    mov START_OF_ROM @rom

    mrk nextinput
        mov @rom t
        fjp noinput
        mov t @dtxt
    jmp nextinput
    mrk noinput

    mov 0 x
    mov 10 y
    mov #8000 @dnum
    mov b00000_110000_00100 @tcol
    mov 'L' @dtxt
    mov 'o' @dtxt
    mov 'l' @dtxt

    mov @msx x
    mov @msy y
    mov c @rot
    mov 24 @scale
    mov TEST_SPRITE @draw
    mov TEST_SPRITE @draw
    add c #100 c

    mov @minput t
    fjp nominput
        prn t
    mrk nominput

    nxt

jmp gameloop
